%h1= resource

.admin_actions
  = link_to "Uredi", edit_admin_customer_path(resource)

.row
  .col-xs-6
    .details.panel.panel-default
      .panel-body
        %strong= I18n.t 'attributes.title'
        %p= resource.title
        %strong= I18n.t 'attributes.name'
        %p= resource.name
        %strong= I18n.t 'attributes.address'
        %p= resource.address
        %strong= I18n.t 'attributes.post'
        %p= resource.post
        %strong= I18n.t 'attributes.city'
        %p= resource.city
        %strong= I18n.t 'attributes.phone'
        %p= resource.phone
        %strong= I18n.t 'attributes.email'
        %p= resource.email
        - if resource.vat_exempt?
          %strong= I18n.t 'attributes.vat_exempt'
        - else
          %strong= I18n.t 'attributes.vat_id'
          %p
            - if resource.vat_id? && !resource.vat_id.to_i.zero?
              = resource.vat_id
            - else
              .muted Manjka

  .col-xs-6
    .panel.panel-default
      .panel-heading 
        %h3.panel-title Opombe

      %table.table
        %tbody
          - resource.remarks.each do |r|
            %tr
              %td= r.remark
              %td= r.created_at
              %td= link_to "x", [:admin, r], method: :delete
      .panel-body
        = simple_form_for [:admin, resource.remarks.build(user: current_user)], wrapper: :inline_form, html: { class: 'form-inline' } do |f|
          = f.hidden_field :user_id
          = f.hidden_field :remarkable_id
          = f.hidden_field :remarkable_type
          = f.input :remark, placeholder: "Nova opomba", label: false
          = f.submit :Shrani


.panel.panel-default
  .panel-heading 
    %h3.panel-title Prejemniki

  %table.table
    %thead
      %tr
        %th ID
        %th Naziv
        %th Naslov
        %th Pošta
        %th Količina
        %th Naročnina
    %tbody
      - resource.subscribers.each do |s|
        %tr
          %td= s.id
          %td= s.title or s.name
          %td= s.address
          %td= s.post
          %td= s.quantity
          %td
            - s.subscriptions.each do |subscription|
              = subscription.plan
              %small.text-muted== (#{subscription.id})
              %br
              - if subscription.start?
                %small.label.label-success= subscription.start
              - if subscription.end?
                %small.label.label-danger= subscription.end


.panel.panel-default
  .panel-heading 
    %h3.panel-title Izdani računi

  %table.table.rowlinks
    %thead
      %tr
        %th Ref. št.
        %th Številka
        %th Izdan
        %th Rok
        %th Znesek
    %tbody
      - resource.invoices.each do |invoice|
        %tr
          %td
            = link_to "", admin_invoice_path(invoice)
            = invoice.reference_number
          %td= invoice.issue
          %td= l invoice.created_at, format: :simple
          %td= l invoice.due_at, format: :simple
          %td= number_to_currency invoice.total
        </tr>