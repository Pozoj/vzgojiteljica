<div class="row tools">
  <div class="col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <i class="glyphicon glyphicon-asterisk"></i>
          Izdaja računov
        </h3>
      </div>
      <div class="panel-body">
        <%= form_for @invoice_wizard, url: admin_invoices_path, method: :post, html: {class: 'form-inline'} do |f| %>
          <div class="form-group">
            <%= f.collection_select :issue_id, Issue.order(published_at: :desc), :id, :to_s, {}, {class: 'form-control'} %>
            <%= f.text_field :last_invoice_number, placeholder: '811 - računi od 811 naprej', class: 'form-control' %>
          </div>
          <div class="form-group pull-right">
            <%= f.submit "Ustvari račune", class: 'btn btn-default' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <i class="glyphicon glyphicon-print"></i>
          Tiskanje računov
        </h3>
      </div>
      <div class="panel-body">
        <%= form_for @invoice_wizard, url: print_all_admin_invoices_path, method: :get, html: {class: 'form-inline'} do |f| %>
          <div class="form-group">
            <%= f.collection_select :issue_id, 
                Invoice.select(:issue_id).distinct(:issue_id).map(&:issue).compact, :id, :to_s,
                {}, {class: 'form-control'} %>
          </div>
          <div class="form-group pull-right">
            <%= f.submit "Natisni račune", class: 'btn btn-default' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<h2>Izdani računi</h2>
<table class="table rowlinks">
  <thead>
    <tr>
      <th>Ref. št.</th>
      <th>Stranka</th>
      <th>Številka</th>
      <th>Izdan</th>
      <th>Rok</th>
      <th>Znesek</th>
    </tr>
  </thead>
  <tbody>
    <% collection.each do |invoice| %>
      <tr>
        <td>
          <%= link_to "", admin_invoice_path(invoice) %>
          <%= invoice.reference_number %></td>
        <td><%= invoice.customer %></td>
        <td><%= invoice.issue %></td>
        <td><%= l invoice.created_at, format: :simple %></td>
        <td><%= l invoice.due_at, format: :simple %></td>
        <td><%= number_to_currency invoice.total %></td>
      </tr>
    <% end %>
  </tbody>
  <%= paginate collection %>
</table>