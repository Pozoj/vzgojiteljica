<h2>
  Izdaja računov
  <i class="glyphicon glyphicon-asterisk"></i>                    
</h2>

<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for @invoice_wizard, url: admin_invoices_path, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :issue_id, "Številka" %>
        <%= f.collection_select :issue_id, Issue.order(year: :desc, issue: :desc, published_at: :desc), :id, :to_s, {}, {class: 'form-control'} %>
      </div>
      <div class="form-group">
        <%= f.label :last_invoice_number, "Zadnja št. računa" %>
        <%= f.text_field :last_invoice_number, placeholder: "#{@last} - računi od #{@last} naprej", class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :include_yearly do %>
          <%= f.check_box :include_yearly %>
          Vključi letne
        <% end %>
      </div>
      <div class="form-group">
        <%= f.submit "Ustvari račune", class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>