<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.5.1/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
<script type="text/javascript">
  $(function() {
    if ($('.has-error').length) {
      $('.has-error input').first().select().focus()
    }
    else {
      $('#order_form_form_id').focus();
    }

    $('#order_form_customer_id').chosen({
      no_results_text: '<%= I18n.t('chosen.no_results_text') %>',
      placeholder_text_single: '<%= I18n.t('chosen.placeholder_text_single') %>'
    });

    $('.input-group.date, .input-daterange').datepicker({
      format: "dd/mm/yyyy"
    });
  });
</script>

<div class="row">
  <div class="form-inputs col-xs-8">
    <%= f.input :form_id %>
    <%= f.input :authorizer %>
    <%= f.association :customer, collection: Customer.all.order(:name, :title), label_method: :to_s, value_method: :id %>
    <div class="form-group">
      <%= f.label :issued_at %>
      <div class="input-group date">
        <%= f.text_field :issued_at, class: 'form-control' %>
        <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :processed_at %>
      <div class="input-group date">
        <%= f.text_field :processed_at, class: 'form-control' %>
        <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label "Veljavnost od - do" %>
      <div class="input-daterange input-group">
        <%= f.text_field :start, class: 'form-control input-sm', placeholder: 'Pričetek' %>
        <span class="input-group-addon">do</span>
        <%= f.text_field :end, class: 'form-control input-sm', placeholder: 'Konec' %>
      </div>
    </div>

    <%= f.input :document %>

    <div class="form-actions">
      <hr>
      <%= f.button :submit %>
    </div>
  </div>
</div>
