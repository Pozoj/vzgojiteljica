%h1
  = resource
  %small.muted
    Prejemnik za
    = link_to resource.customer, [:admin, resource.customer]

.admin_actions
  = link_to edit_admin_subscriber_path(resource), class: 'btn btn-default' do
    %i.glyphicon.glyphicon-edit
    Uredi

.row
  .col-xs-6
    .details.panel.panel-default
      .panel-body
        %strong= I18n.t 'attributes.title'
        %p= resource.title
        %strong= I18n.t 'attributes.address'
        %p= resource.address
        %strong= I18n.t 'attributes.post'
        %p= resource.post
        - if resource.city?
          %strong= I18n.t 'attributes.city'
          %p= resource.city
        - if resource.phone?
          %strong= I18n.t 'attributes.phone'
          %p= resource.phone
        - if resource.email?
          %strong= I18n.t 'attributes.email'
          %p= mail_to resource.email

  .col-xs-6= render "admin/remarks/form", resource: resource

.panel.panel-default
  .panel-heading 
    %h3.panel-title Naročnine

  %table.table.rowlinks
    %thead
      %tr
        %th
        %th ID
        %th Pričetek
        %th Konec
        %th Popust
        %th Plan
    %tbody
      - resource.subscriptions.each do |s|
        %tr
          %td
            - if s.active?
              %small.label.label-success Aktivna
            - else
              %small.label.label-danger Neaktivna
          %td
            = link_to "", admin_subscription_path(s)
            = s.id
          %td
            - if s.start?
              = l s.start
          %td
            - if s.end?
              = l s.end
          %td= number_to_percentage s.discount || 0
          %td= s.plan