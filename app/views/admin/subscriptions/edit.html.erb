<h1>
  Naročnina
  <small class="muted">
    za
    <%= link_to @subscription.customer, [:admin, @subscription.customer] %>,
    prejemnik
    <%= link_to @subscription.subscriber, [:admin, @subscription.subscriber] %>
  </small>
</h1>

<%= simple_form_for [:admin, @subscription] do |f| %>
  <%= f.input :start %>
  <% if @subscription.end %>
    <%= f.input :end %>
  <% end %>
  <%= f.association :plan %>
  <%= f.input :discount %>
  <%= f.submit %>
<% end %>
