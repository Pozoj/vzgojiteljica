<table style="padding: 25px;" cellpadding="0" cellspacing="0">
  <thead>
    <tr>
      <th style="text-align: left; background: #ccc; font-family: sans-serif; padding: 2px 10px;">Naziv</th>
      <th style="text-align: left; background: #ccc; font-family: sans-serif; padding: 2px 10px;">Zapadlo</th>
      <th style="text-align: left; background: #ccc; font-family: sans-serif; padding: 2px 10px;">Znesek</th>
    </tr>
  </thead>
  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td style="text-align: left; font-family: sans-serif; padding: 2px 10px;"><%= invoice.customer %></td>
        <td style="text-align: left; font-family: sans-serif; padding: 2px 10px;"><%= l invoice.due_at, format: :simple %></td>
        <td style="text-align: left; font-family: sans-serif; padding: 2px 10px;"><%= number_to_currency invoice.total %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th style="text-align: left; background: #ccc; font-family: sans-serif; padding: 2px 10px;"> 
        <%= @invoices.count %>
        računov
      </th>
      <th style="text-align: left; background: #ccc; font-family: sans-serif; padding: 2px 10px;"></th>
      <th style="text-align: left; background: #ccc; font-family: sans-serif; padding: 2px 10px;"><%= number_to_currency @invoices.to_a.sum(&:total) %></th>
    </tr>
  </tfoot>
</table>